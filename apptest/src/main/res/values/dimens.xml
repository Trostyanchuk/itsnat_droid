    <dimen name="activity_horizontal_margin">10.3dp</dimen>
    <dimen name="activity_vertical_margin">10.3dp</dimen>

    <!-- Notas sobre gradient_radius:
        En versiones previas a LOLLIPOP (5.0) un valor 5000.3% tiene sentido, se divide entre 100 y el resultado son pixels (es raro pero creo que es así), y no se distingue
        si se añade la p
        En versions post LOLLIPOP 5000.3% NO tiene sentido y es preferible usar algo como 50.3%p
    -->
    <item name="gradient_radius" type="dimen">5000.3%</item> <!-- Añaadir format="float" para un valor concreto no dimensión (serán pixels) ej "100.3" -->
    <item name="centerX" type="dimen">40%</item> <!-- el centro es 50%, max 100%, alternativa: "0.4" o una dimensión -->
    <item name="centerY" type="dimen">0.4</item> <!-- el centro es 0.5, max 1.0, alternativa: "40%" o una dimensión -->
</resources>
